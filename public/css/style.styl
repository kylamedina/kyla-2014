// PROJECT MARKERS ////////////////////////////

.ajax-projects
	&.markers-hidden
		button[data-page='projects']
			-webkit-transition margin 0.3s ease
			transition margin 0.3s ease
			margin-top 0rem

.ajax-projects
	&.markers-visible
		button[data-page='projects']
			-webkit-transition margin 0.3s ease
			transition margin 0.3s ease
			margin-top -6.5rem
		.project-markers
			opacity 1 !important
			-webkit-transition opacity 0.3s ease
			transition opacity 0.3s ease
			visibility visible
			display block
.project-markers
	top 50%
	position fixed
	right 5.75rem
	width 1.35rem
	z-index 9999
	opacity 0
	visibility hidden
	display none
	-webkit-transition opacity 0.3s ease
	transition opacity 0.3s ease
	@media screen and (max-width: 1024px)
		right 4.95rem
	.marker
		background-color white
		// width 1.35rem
		height 1.35rem
		display block
		border-radius 50%
		margin 0.6rem 0
		border 0.3rem solid black
		&.is-active
			background-color black
		&:hover
			background-color pink
			border 0.3rem solid pink
.marker-link
	h4
		fs(1.25rem)
		line-height 1
		margin 0
		padding 0
		white-space: pre
		text-align center
			
	measure = -3.2rem -5.25rem -7.2rem -9rem -10.9rem -12.75rem
	for measure, i in measure
		&:nth-child({i+1})
			.project-bubble
				left -5rem
				top measure
	&:hover
	// , .marker.is-active +
		.project-bubble
			opacity 1
			-webkit-transition opacity 0.3s ease 
			transition opacity 0.3s ease 
			-webkit-animation translateMarkers 0.2s ease 0s 1 normal forwards
			animation translateMarkers 0.2s ease 0s 1 normal forwards

.project-bubble
	background-color white
	color black
	float right
	text-transform uppercase
	padding 1rem 1.5rem
	position relative
	opacity 0
	transition opacity 0.1s ease
	border 0.3rem solid black
	&:after
		content ''
		background url('../svg/triangle.min.svg') no-repeat
		background-size 1.5rem 1.2rem
		height: 1.5rem
		width: 1.2rem
		position: absolute
		right 0
		-webkit-transform translate(1.2rem, -1.1rem)
		transform translate(1.2rem, -1.1rem)

// ANIMATIONS ///////////////////////////////////

@keyframes translateMarkers
	0%
		left -5rem
	100%
		left -3rem

@keyframes translateProjectsLinkUp
	0%
		margin-top 0rem
