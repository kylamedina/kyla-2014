// PANEL //////////////////////////////////////////

.panel
	background-color pink
	color white
	position fixed
	left 0
	top 0
	height 100%
	width 100%
	z-index 9998
	overflow-y auto
	-webkit-transition -webkit-transform 0.55s eas-in-sine
	transition transform 0.55s eas-in-sine
	-webkit-transform translateX(-60rem)
	transform translateX(-60rem)
	@media screen and (min-width: 627px)
		max-width 52rem
	@media screen and (max-width: 627px)
		width calc(100% - 3rem)
	@media screen and (max-width: 360px)
		p
			fs(1rem)
	.social-set
		a
			inline-block()
			width 3.5rem
			height 3.5rem
			margin 3.5rem 0.5rem 0
			padding 0.75rem
			background-color white
			&:nth-child(1)
				margin-left 0
			svg 
				path, circle
					fill pink

	a
		color white
		border-bottom 2px solid white
		text-decoration none

.activate-panel
	cursor pointer
	&:active
		.panel-close
			-webkit-transform scale(0.75)
			transform scale(0.75)
			transition -webkit-transform 0.15s ease
			transition transform 0.25s ease

.panel-full-width
	position relative

.panel-close
	width 2rem
	height 2rem
	position absolute
	right 43rem
	top 5.3rem
	transition all 0.5s eas-in-sine 0.05s
	@media screen and (max-width: 640px)
		display none

.panel-content
	margin 4rem 8rem
	-webkit-transform translateX(-15rem)
	transform translateX(-15rem)
	&:nth-of-type(2)
		margin-top 15rem

@media screen and (max-width: 640px)
	.panel-content
		margin 2rem 3rem 2rem 5.5rem
		-webkit-transform translateX(0rem)
		transform translateX(0rem)
		&:nth-of-type(1)
			margin-top 10rem !important
	
.panel img
	opacity 0
	-webkit-transform translateX(-15rem)
	transform translateX(-15rem)
	-webkit-transition all 0.5s eas-in-sine
	transition all 0.5s eas-in-sine
	display block
	@media screen and (max-width: 640px)
		-webkit-transform translateX(0rem)
		transform translateX(0rem)
		opacity 1

.view-main, .border.left, .border.right, .header-main h1
	-webkit-transform none
	transform none
	-webkit-transition -webkit-transform 0.5s eas-in-sine
	transition transform 0.5s eas-in-sine

.panel-is-open
	.view-main, .border.left, .border.right, .header-main h1
		-webkit-transform translateX(50rem)
		transform translateX(50rem)
		-webkit-transition -webkit-transform 0.5s ease-out-circ
		transition transform 0.5s ease-out-circ

	button.fixed-left, button.fixed-right
		-webkit-transition -webkit-transform 0.5s ease-out-circ
		transition transform 0.5s ease-out-circ
	button.fixed-left
		-webkit-transform translateX(45.55rem) rotate(90deg)
		transform translateX(45.55rem) rotate(90deg)
	button.fixed-right
		-webkit-transform translateX(45.55rem) rotate(-90deg)
		transform translateX(45.55rem) rotate(-90deg)
	.panel
		-webkit-transform translateX(-2rem)
		transform translateX(-2rem)
		-webkit-transition -webkit-transform 0.45s ease-out-circ
		transition transform 0.45s ease-out-circ
		@media screen and (max-width: 640px)
			p
				font-size 10px
	.panel-close
		right 7rem
		-webkit-transform rotate(720deg)
		transform rotate(720deg)
		-webkit-transition all 0.45s ease-out-circ
		transition all 0.45s ease-out-circ
		&:hover
			-webkit-transform rotate(540deg) !important
			transform rotate(540deg) !important
			-webkit-transition all 0.45s linear
			transition all 0.45s linear

	.panel-content
		-webkit-transform translateX(0rem)
		transform translateX(0rem)
		&:nth-of-type(1)
			margin-top 15rem
			-webkit-transition -webkit-transform 0.35s ease-out-cubic 0.15s
			transition transform 0.35s ease-out-cubic 0.15s
		&:nth-of-type(3)
			-webkit-transition -webkit-transform 0.35s ease-out-cubic 0.25s
			transition transform 0.35s ease-out-cubic 0.25s
	.panel img
		opacity 1
		-webkit-transform translateX(0rem)
		transform translateX(0rem)
		-webkit-transition all 0.3s ease-out-circ
		transition all 0.3s ease-out-circ
	
	.panel-overlay
		-webkit-transform translate(0rem,0rem)
		transform translate(0rem,0rem)
		opacity 1
		z-index 500
		-webkit-transition all 0.5s ease-out-circ
		transition all 0.5s ease-out-circ


@media screen and (max-width: 640px)
	.panel-is-open
		.header-main h1
			-webkit-transform none
			transform none

.panel-overlay
	background-color rgba(white,0.95)
	height 100%
	-webkit-transform translate(0rem,-250rem)
	transform translate(0rem,-250rem)
	-webkit-transition all 0.5s ease
	transition all 0.5s ease
	opacity 0
	overflow hidden
	position fixed
	width 100%
	z-index -100
	a
		position fixed
		bottom 5.5rem
		left 5.5rem
		display inline-block
		text-decoration none
		color black
		padding-bottom 0.3rem
		border-bottom 0.3rem solid black
		overlayt =  -15rem -10rem -5rem 0rem
		for overlayt, i in overlayt
			&:nth-child({i+1})
				-webkit-transform translate(50rem,overlayt)
				transform translate(50rem,overlayt)
		&:visited
			color black
		&:hover
			color pink
			border-bottom 0.3rem solid pink
		@media screen and (max-width: 640px)
			&:nth-child(1)
				-webkit-transform translate(0rem,13.5rem) rotate(90deg)
				transform translate(0rem,13.5rem) rotate(90deg)
				bottom auto
				left auto 
				right -2.4rem
				top 0rem
				border-bottom none
				&:hover
					border-bottom none
			&:nth-child(n+2)
				display none
				

