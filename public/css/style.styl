@import 'axis'
normalize()

*, *:before, *:after, *::before, *::after
	*behavior: url(js/vendor/boxsizing.htc)
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	margin: 0
	padding: 0
	-webkit-backface-visibility: hidden

html
	overflow-y: scroll
	overflow-x: hidden
	font-size 62.5%
	-webkit-font-smoothing antialiased
	text-rendering optimizeLegibility
	font-smoothing antialiased
	font-smooth always

img,video,audio,embed,object,input,iframe,svg
	width 100%
	max-width 100%

*:focus
	outline 0

svg
	cursor pointer
	// pointer-events: none

a
	text-shadow none

// VARIABLES ///////////////////////////////////////////////

pink = rgba(#FE9088)
// black = #212121
black = #555
litegray = rgb(245,245,245)


// FONTS ///////////////////////////////////////////////////

trimmonolight()
	font-family:"Trim Mono Light", "Courier New", Courier, "Lucida Sans Typewriter", "Lucida Typewriter", monospace;
	font-weight:200; 
	font-style:normal;
soleilxbold()
	font-family:"Soleil Extra Bold", Futura, 'Century Gothic', Verdana, sans-serif;
	font-weight:800
	font-style:normal
// soleilxbold()
// 	font-family:"Apercu Bold", Times, Calibri, sans-serif;
// 	font-size-adjust:0.508
// 	font-weight:bold
// 	font-style:normal


// GENERAL /////////////////////////////////////////////////

body, html
	trimmonolight()
	color black

.border
	background-color black
	position fixed
	z-index 2000
	-webkit-transform none
	@media screen and (max-width: 640px)
		display none
	&.top, &.bottom
		height 2rem
		width 100%
	&.left, &.right
		width 2rem
		height 100%
	&.top
		top 0
	&.bottom
		bottom 0
	&.left
		left 0
	&.right
		right 0


// TYPOGRAPHY ///////////////////////////////////
h1, h2, h3, h4, h5, h6
	soleilxbold()
h1
	fs(2.5rem)
	cursor pointer
	text-transform uppercase
	display inline-block
	@media screen and (max-width: 1024px)
		.show
			display none
	@media screen and (min-width: 1024px)
		span
			display inline-block
			-webkit-transition width 0.2s linear, opacity 0.1s linear
			transition width 0.2s linear, opacity 0.1s linear
		&.at-top
			.show
				opacity 0
				width 0px !important
				-webkit-transition width 0.2s linear, opacity 0.1s linear
				transition width 0.2s linear, opacity 0.1s linear
		&.scrolling
			.show
				opacity 1
				display inline-block

			.hide
				opacity 0
				width 0px !important
				-webkit-transition width 0.2s linear, opacity 0.1s linear
				transition width 0.2s linear, opacity 0.1s linear
h3
	fs(2.5rem)
		
p
	fs(1.3rem)
	trimmonolight()
	line-height 1.6

::selection
	background pink
	color white
::-moz-selection
	background pink
	color white

.panel 
	::selection
		background white
		color pink
	::-moz-selection
		background white
		color pink


// LAYOUT ///////////////////////////////////////

[class*='fixed']
	position fixed 
	-webkit-transform none
	transform none
	-webkit-transition -webkit-transform 0.5s ease
	transition transform 0.5s ease
	z-index 400
.fixed-center
	top 50%
.fixed-left
	left 6rem
.fixed-right
	right 6rem
.fixed-top
	top 5rem
.fixed-bottom
	bottom 5rem

main
	background-color white
	margin-bottom: 10rem
	@media all and (max-width: 640px)
		margin: 8rem auto
.view-main
	margin 0 3rem
	-webkit-transform translateY(0rem)
	transform translateY(0rem)
	-webkit-transition all 0.5s ease 0s
	transition all 0.5s ease 0s
	&.is-loading
		opacity 0
		-webkit-transform translateY(10rem)
		transform translateY(10rem)
		-webkit-transition all 0.5s ease 0s
		transition all 0.5s ease 0s
	@media all and (max-width: 1024px)
		margin 0
	@media all and (max-width: 768px)
		padding-bottom 10rem
	@media all and (max-width: 640px)
		padding-bottom 8rem
		margin 0 2rem
	@media all and (max-width: 420px)
		padding-top 0rem
			
.container
	margin 0 auto
	max-width 144rem
	@media screen and (max-width: 1620px)
		margin 0 6rem
	@media all and (max-width: 768px)
		padding-top 5rem
	@media all and (max-width: 640px)
		padding-top 0
		margin 0

// BUTTON ///////////////////////////////////////

.button
	display inline-block
	background-color black
	border 0.1rem solid white
	color white
	soleilxbold()
	padding 1.15rem 1.35rem
	upcase()
	font-weight bold
	fs(1rem)
	cursor pointer
	letter-spacing 0.1rem
	&:hover
		border 0.1rem solid white
		background-color pink
		color white

// HEADER ///////////////////////////////////////

.header-main
	@media screen and (max-width: 640px)
		z-index 9999
		background-color white
		height 5rem
		width 100%
		position fixed
		top 0
		border-bottom 0.3rem solid black
	h1
		&:hover
			color pink
		@media screen and (max-width: 1620px)
			margin-left: 3rem
		@media screen and (max-width: 1024px)
			margin-left: 2%
		@media screen and (max-width: 640px)
			margin-left 2rem
			top 1.1rem
			left 0
			display inline-block


// NAV //////////////////////////////////////////

button()
	background none
	background-color transparent
	border none
	color black
	soleilxbold()
	fs(1.85rem)
	cursor pointer
	text-decoration none
	text-transform uppercase
	z-index 9999
	&:hover
		color pink

.nav-main
	-webkit-transition -webkit-transform 0.5s ease
	transition transform 0.5s ease
	button
		button()
		&:nth-child(1)
			-webkit-transform translateX(-4.45rem) rotate(90deg)
			transform translateX(-4.45rem) rotate(90deg)
		&:nth-child(2)
			-webkit-transform translateX(4.45rem) rotate(-90deg)
			transform translateX(4.45rem) rotate(-90deg)
			@media screen and (max-width: 1024px)
				-webkit-transform translateX(5.2rem) rotate(-90deg)
				transform translateX(5.2rem) rotate(-90deg)
	@media screen and (max-width: 640px)
		display none

.back-top-container
	opacity 0
	-webkit-transition all 0.5s ease
	transition all 0.5s ease
	@media screen and (max-width: 1620px)
		margin-left: 2.8rem
	@media screen and (max-width: 640px)
		bottom 2rem
		left 0
		width 100%
		text-align center
		margin-left: 0

.back-top
	button()

.footer-is-showing
	.back-top-container
		bottom 3rem
		-webkit-transition all 0.5s ease
		transition all 0.5s ease
	.back-top
		color white
		z-index 9999
		&:hover
			color pink

.mobile-menu
	display none
	background-color black
	position relative
	z-index 1
	&:hover, &:active
		background-color pink
	svg
		-webkit-transform scale(0.6) rotate(180deg)
		transform scale(0.6) rotate(180deg)
		-webkit-transform-origin 50%
		transform-origin 50%
		-webkit-transition -webkit-transform 0.5s ease
		transition transform 0.5s ease
		path
			fill white
	@media screen and (max-width: 640px)
		display inline-block
		height 4.7rem
		width 5rem
		padding 1rem
		position absolute
		right 0
		z-index 9999

.panel-is-open
	
	.mobile-menu
		svg
			-webkit-transform scale(0.6) rotate(0deg)
			transform scale(0.6) rotate(0deg)
			-webkit-transform-origin 50%
			transform-origin 50%
			-webkit-transition -webkit-transform 0.5s ease
			transition transform 0.5s ease


